<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2018년 8월 14일"
        android:id="@+id/tv_view_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="김성래"
        android:id="@+id/tv_view_transaction_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_view_transaction_id"
        android:text="1234567891011"
        android:id="@+id/tv_view_transaction_hash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="+13.06ETC"
        android:id="@+id/tv_view_transaction_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_view_transaction_money"
        android:text="confirm / 125"
        android:id="@+id/tv_view_transaction_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_view_transaction_confirm"
        app:layout_constraintRight_toLeftOf="@id/tv_view_transaction_confirm"
        android:src="@drawable/ic_forum"
        android:layout_width="16dp"
        android:layout_height="16dp" />

</android.support.constraint.ConstraintLayout>