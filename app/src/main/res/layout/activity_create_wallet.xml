<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_create_wallet_symbol"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_create_wallet_symbol"
                app:layout_constraintBottom_toBottomOf="@id/iv_create_wallet_symbol"
                app:layout_constraintLeft_toRightOf="@id/iv_create_wallet_symbol"
                android:textSize="22sp"
                android:id="@+id/tv_create_wallet_title"
                android:text="이더리움"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="22sp"
                app:layout_constraintTop_toBottomOf="@id/tv_create_wallet_title"
                android:id="@+id/tv1"
                android:text="지갑 정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                app:layout_constraintTop_toBottomOf="@id/tv1"
                android:id="@+id/tv2"
                android:text="지갑 이름을 입력 해주세요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_create_wallet_name"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv2"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                app:layout_constraintTop_toBottomOf="@id/et_create_wallet_name"
                android:id="@+id/tv3"
                android:text="지갑에 대한 설명을 입력 해주세요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_create_wallet_description"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="보안"
                app:layout_constraintTop_toBottomOf="@id/et_create_wallet_description"
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                app:layout_constraintTop_toBottomOf="@id/tv4"
                android:id="@+id/tv5"
                android:text="비밀번호"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_create_wallet_password"
                android:background="@drawable/bg_input"
                app:layout_constraintTop_toBottomOf="@id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                app:layout_constraintTop_toBottomOf="@id/et_create_wallet_password"
                android:id="@+id/tv6"
                android:text="비밀번호 확인"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                app:layout_constraintTop_toBottomOf="@id/tv6"
                android:id="@+id/et_create_wallet_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_create_wallet_confirm_password"
                android:id="@+id/rb_create_wallet_user_info_open"
                android:text="소유자 정보 공개"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                app:layout_constraintLeft_toLeftOf="@id/rb_create_wallet_user_info_open"
                app:layout_constraintTop_toBottomOf="@id/rb_create_wallet_user_info_open"
                android:id="@+id/rb_create_wallet_major"
                android:text="지갑 정보 공개"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_create_wallet"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/rb_create_wallet_major"
                android:layout_width="156dp"
                android:background="@drawable/bg_tint_gradient"
                android:layout_height="wrap_content" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>